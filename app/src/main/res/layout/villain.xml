<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/city5">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:layout_width="288dp"
            android:layout_height="256dp"
            android:id="@+id/videoView2"
            android:layout_above="@+id/bSaveTechville"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="One of Dr. Sweet-Tooth&apos;s henchmen Insomnia is attacking"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMAPH (Display Power meter)"
            android:id="@+id/textView8"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="(user will choose a power to use)"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:layout_above="@+id/rbPower1"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Techville"
            android:id="@+id/bSaveTechville"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView9"
            android:layout_alignEnd="@+id/textView9" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/rbPower1"
            android:layout_above="@+id/rbPower2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/rbPower2"
            android:layout_alignEnd="@+id/rbPower2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/rbPower2"
            android:layout_above="@+id/rbPower3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/rbPower3"
            android:layout_alignEnd="@+id/rbPower3" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New RadioButton"
            android:id="@+id/rbPower3"
            android:checked="false"
            android:textColor="#ffffff"
            android:layout_above="@+id/videoView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/bSaveTechville"
            android:layout_toStartOf="@+id/bSaveTechville" />

    </RelativeLayout>

</LinearLayout>
