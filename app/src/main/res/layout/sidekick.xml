<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/blue2"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="But Wait!"
            android:id="@+id/textView2"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You need a Sidekick"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSidekickName"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Sidekick Name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSidekickUsername"
            android:layout_below="@+id/etSidekickName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Sidekick Username" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etSidekickPassword"
            android:layout_below="@+id/etSidekickUsername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etSidekickConfirmPassword"
            android:layout_below="@+id/etSidekickPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Confirm Password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pick 1 Sidekick Power"
            android:id="@+id/textView5"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/etSidekickConfirmPassword"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teleportation"
            android:id="@+id/cbTeleportation"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:onClick="selectItem2"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controlling Weather"
            android:id="@+id/cbControllingWeather"
            android:layout_alignTop="@+id/cbTeleportation"
            android:layout_toRightOf="@+id/cbTeleportation"
            android:layout_toEndOf="@+id/cbTeleportation"
            android:checked="false"
            android:onClick="selectItem2"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-Ray Vision"
            android:id="@+id/cbXRay"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/cbControllingWeather"
            android:layout_toEndOf="@+id/cbControllingWeather"
            android:checked="false"
            android:onClick="selectItem2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Techville"
            android:id="@+id/bSaveTechville"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/cbControllingWeather"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
