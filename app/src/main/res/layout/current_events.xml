<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/amaph3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Education 1"
            android:id="@+id/tvEducat1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="49dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Education 2"
            android:id="@+id/tvEducat2"
            android:textColor="#ffffff"
            android:layout_below="@+id/tvEducat1"
            android:layout_alignLeft="@+id/tvEducat1"
            android:layout_alignStart="@+id/tvEducat1"
            android:layout_marginTop="34dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Education 3"
            android:id="@+id/tvEducat3"
            android:textColor="#ffffff"
            android:layout_below="@+id/tvEducat2"
            android:layout_alignLeft="@+id/tvEducat2"
            android:layout_alignStart="@+id/tvEducat2"
            android:layout_marginTop="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Villain Update"
            android:id="@+id/tvVillainUpdate"
            android:layout_below="@+id/tvEducat3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:textColor="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMAPH"
            android:id="@+id/bCurrentBackAmaph"
            android:layout_marginTop="77dp"
            android:layout_below="@+id/tvVillainUpdate"
            android:layout_alignLeft="@+id/tvEducat3"
            android:layout_alignStart="@+id/tvEducat3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Techville"
            android:id="@+id/bCurrentToTechville"
            android:layout_alignBaseline="@+id/bCurrentBackAmaph"
            android:layout_alignBottom="@+id/bCurrentBackAmaph"
            android:layout_toRightOf="@+id/tvVillainUpdate"
            android:layout_toEndOf="@+id/tvVillainUpdate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Did You Know"
            android:id="@+id/tvDidYouKnow"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:layout_alignRight="@+id/tvVillainUpdate"
            android:layout_alignEnd="@+id/tvVillainUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>
