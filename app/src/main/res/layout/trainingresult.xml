<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guyhembroff.owmcgowa_adm.amaph.TrainingResult"
    android:background="@drawable/amaph5">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.guyhembroff.owmcgowa_adm.amaph.CircularProgress
            android:id="@+id/circular_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dislay Message"
            android:id="@+id/tvMessage"
            android:layout_below="@+id/circular_progress"
            android:layout_marginTop="35dp"
            android:textColor="#ffffff"
            android:maxLines="4"
            android:singleLine="false"
            android:layout_alignLeft="@+id/circular_progress"
            android:layout_alignStart="@+id/circular_progress"
            android:layout_alignRight="@+id/circular_progress"
            android:layout_alignEnd="@+id/circular_progress" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/bBackTraining"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/circular_progress"
            android:layout_alignStart="@+id/circular_progress" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Techville"
            android:id="@+id/bNextTechville"
            android:layout_alignTop="@+id/bBackTraining"
            android:layout_alignRight="@+id/circular_progress"
            android:layout_alignEnd="@+id/circular_progress" />

    </RelativeLayout>

</LinearLayout>
